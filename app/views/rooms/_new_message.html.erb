<% if signed_in? %>
  <%= form_for([@room, @room.messages.build], remote: true) do |f| %>
  <span class="msg-input">

    <div class="input-group mb-3">
      <%= f.text_field :content, class: "form-control", rows: 1, placeholder: "Message", aria_label:"Message", aria_describedby: "basic-addon2", autofocus: "autofocus", autocomplete: "off" %>
      <div class="input-group-append">
        <%= f.submit "Send", class: "btn btn-primary" %>
      </div>
    </div>

  </span>
  <% end %>
  <% end %>
